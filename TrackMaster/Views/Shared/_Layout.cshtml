    <script src="~/js/trackist.js"></script>
</head>
<body>
        <div class="wrapper">

        <!-- Sidebar -->
        <nav id="sidebar">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <h5>Menu</h5>
            </div>

            <ul class="list-unstyled components">

                <li id="home">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li id="settings">
                    <a asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
                </li>
                <li id="overlay">
                    <a asp-area="" asp-controller="Overlay" asp-action="Index">Overlay</a>
                </li>               
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid" style="justify-content:flex-start">
                        <button type="button" id="sidebarCollapse" class="navbar-btn">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Track Master</a>                    
                    </div>
                </nav>
            </header>


            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

    </div>
